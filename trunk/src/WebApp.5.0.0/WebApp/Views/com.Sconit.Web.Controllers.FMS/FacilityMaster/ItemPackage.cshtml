@model IEnumerable<com.Sconit.Entity.MD.FacilityMasterPackage>
<fieldset>
    <script type="text/javascript">
        function FacilityMasterPackageGrid_OnDataBinding(e) {
            e.data = {
                FacilityMasterCode: $('#FacilityMasterCode').val(),
                FacilityMaster: $('#FacilityMaster').val(),
                Description: $('#Description').val(),
                UnitCount: $('#UnitCount').val(),
                IsDefault: $('#IsDefault').is(':checked')
            };
        } 
    </script>
    @(Html.Telerik().Grid(Model)
        .Name("FacilityMasterPackageGrid")
        .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.FacilityMaster).ClientTemplate(string.Format("<a href=\"javascript:onFacilityMasterPackageclick('{0}')\">{1}</a>", "<#= Id #>", "<#= FacilityMaster #>"));
            columns.Bound(o => o.Description);
            columns.Bound(o => o.UnitCount).Format("{0:0.00}");
            columns.Bound(o => o.IsDefault)
                .ClientTemplate("<input type='checkbox' disabled='disabled' name='IsDefault' <#= IsDefault? checked='checked' : '' #> />");
        })
        .CellAction(cell =>
            {
                if (cell.Column.Member == "FacilityMaster")
                {
                    cell.Text = string.Format("<a href=\"javascript:onFacilityMasterPackageclick('{0}')\">{1}</a>", cell.DataFacilityMaster.Id, cell.DataFacilityMaster.FacilityMaster);
                }
            })
                .Scrollable(c => c.Enabled(false))
                .EnableCustomBinding(true)
                .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxFacilityMasterPackageList", "FacilityMaster"))
                        .ClientEvents(events => events.OnDataBinding("FacilityMasterPackageGrid_OnDataBinding"))
                .Pageable(settings =>
                {
                    settings.Total(ViewBag.Total == null ? 0 : ViewBag.Total);
                    settings.PageSize(ViewBag.PageSize);
                })
                .Sortable()
                .Resizable(resizing => resizing.Columns(true))
            )
    @{string FacilityMasterCode = ViewBag.FacilityMasterCode;}
    @Html.Hidden("FacilityMasterCode", FacilityMasterCode)
    <div class="search-footer">
        @Html.Hidden("isFromList", true)
@*        <button type="button" id="btnNew" onclick="btnNewFacilityMasterPackage_Click()">
            @Resources.SYS.Global.Button_New</button>*@

    @Html.Button(Resources.SYS.Global.Button_New, "Url_FacilityMaster_Edit", new Dictionary<string, string>()
	    {
	        {"type", "button"},
	        {"id", "btnNew"},
            {"needconfirm","false"},
            {"onclick","btnNewFacilityMasterPackage_Click()"}
	    })
        <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/FacilityMaster/List")'">
            @Resources.SYS.Global.Button_Back</button>
    </div>
</fieldset>
<script language="javascript" type="text/javascript">
    function btnNewFacilityMasterPackage_Click() {
        var data = {
            "id": $("#FacilityMasterCode").val()
        };
        $.ajax({
            type: "get",
            dataType: "html",
            url: "/FacilityMaster/FacilityMasterPackageNew/",
            data: data,
            cache: false,
            success: function (data, textStatus) {
                var tabStrip = $("#TabStrip");
                var tabStripContent2 = tabStrip.data("tTabStrip").getContentElement(2);
                $(tabStripContent2).html(data);
            }
        });
    }

    function onFacilityMasterPackageclick(Id) {
        var data = {
            "Id": Id
        };
        $.ajax({
            type: "get",
            dataType: "html",
            cache: false,
            url: "/FacilityMaster/FacilityMasterPackageEdit/",
            data: data,
            success: function (data, textStatus) {
                var tabStrip = $("#TabStrip");
                var tabStripContent2 = tabStrip.data("tTabStrip").getContentElement(2);
                $(tabStripContent2).html(data);
            }
        });
    }
</script>
