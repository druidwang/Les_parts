@model IEnumerable<com.Sconit.Entity.WMS.RepackTask>
<script type="text/javascript">
    $(function () {
        $("#checkAll").click(function () {
            $('input[name="checkedRecords"]').attr("checked", this.checked);
            $("#btnAssign").attr("style", this.checked ? "display:inline" : "display:none");
        });
    });

    function showButtons() {
        var $checkRecords = $("input[name='checkedRecords']");
        var showButton = false;
        for (var i = 0; i < $checkRecords.length; i++) {
            if ($checkRecords[i].checked) {
                showButton = true;
                break;
            }
        }
        $("#checkAll").attr("checked", $checkRecords.length == $("input[name='checkedRecords']:checked").length ? true : false);
    }

    function RepackTaskGrid_OnDataBinding(e) {
        e.data = {
            Item: $('#Item').val(),
            Location: $('#Location').val(),
            DateFrom: $('#DateFrom').val(),
            DateTo: $('#DateTo').val(),
            OrderNo: $('#OrderNo').val()
        };
    }
</script>
<fieldset>
    <legend>@Resources.WMS.RepackTask.RepackTask_Assign_Title</legend>
 <div class="search-footer">
        <table>
            <tr>
                <td>
                    <label>
                        @Resources.WMS.RepackTask.RepackTask_AssignUser
                    </label>
                </td>
                <td>
                     @{
        Html.RenderAction("_UserComboBox", "Common",
         new
         {
             ControlName = "AssignUser"
         });
                }
                </td>
                <td id="tdCarrayOver">
                    @Html.Button(Resources.SYS.Global.Button_Assign, "Url_RepackTask_Assign", new Dictionary<string, string>()
	            {
	                {"type", "button"},
	                {"id", "btnAssign"},
                    {"needconfirm","true"},
                    {"onclick","assignCheckedRepackTasks()"}
	            })
                </td>
            </tr>
        </table>
    </div>
    @(   
 Html.Telerik().Grid(Model)
          .Name("RepackTaskGrid")
          .DataKeys(keys =>
          {
              keys.Add(p => p.Id);
          })
                 .Columns(columns =>
                 {
                     columns.Bound(o => o.Item).ClientTemplate(Html.ActionLink("<#= Item #>", "Edit", "RepackTask", new { id = "<#= Id #>" }, null).ToString());
                     columns.Bound(o => o.ItemDescription);
                     columns.Bound(o => o.Uom);
                     columns.Bound(o => o.UnitCount);
                     columns.Bound(o => o.UCDescription);
                     columns.Bound(o => o.Location);
                     columns.Bound(o => o.StartTime);
                     columns.Bound(o => o.WindowTime);
                     columns.Bound(o => o.Qty);
                     columns.Bound(o => o.CreateDate);
                     columns.Bound(o => o.CreateUserName);
                 })

          .Scrollable(c => c.Enabled(false))
        .EnableCustomBinding(true)
                        .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxAssignList", "RepackTask"))
                                          .ClientEvents(events => events.OnDataBinding("RepackTaskGrid_OnDataBinding"))
        .Pageable(settings =>
        {
            settings.Total(ViewBag.Total == null ? 0 : ViewBag.Total);
            settings.PageSize(ViewBag.PageSize);
        })
        .Sortable()
        .Resizable(resizing => resizing.Columns(true))
    )

   
</fieldset>
